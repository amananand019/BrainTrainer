<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="#00d4bb">
    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30s"
        android:textSize="30dp"
        android:background="#ff00aa"
        android:padding="15dp"
        android:textColor="#000000"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_bias="0.1"/>
    <TextView
        android:id="@+id/correctAnswerRatio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textSize="30dp"
        android:background="#ff00aa"
        android:padding="15dp"
        android:textColor="#000000"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_bias="0.9"/>

    <GridLayout
        android:layout_width="130dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:rowCount="1"
        android:columnCount="3">
        <TextView
            android:id="@+id/number1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#000000"
            android:textSize="30dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/plusOperation"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#000000"
            android:text="+"
            android:textSize="30dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/number2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textColor="#000000"
            android:textSize="30dp"
            android:gravity="center"
            />
    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_marginTop="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:columnCount="2"
        android:rowCount="2">
        <Button
            android:id="@+id/button1"
            android:tag="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="80dp"
            android:background="#ff1100"
            />
        <Button
            android:id="@+id/button2"
            android:tag="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="80dp"
            android:background="#f6ff00"
            />
        <Button
            android:id="@+id/button3"
            android:tag="3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="80dp"
            android:background="#0dff00"
            />
        <Button
            android:id="@+id/button4"
            android:tag="4"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="80dp"
            android:background="#db02e3"
            />
    </GridLayout>

    <TextView
        android:id="@+id/checkResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginLeft="124dp"
        android:layout_marginEnd="124dp"
        android:layout_marginRight="124dp"
        android:layout_marginBottom="25dp"
        android:textColor="#F0F0F0F0"
        android:textSize="50dp"
        android:text="Result"
        app:layout_constraintBottom_toTopOf="@+id/playAgain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/playAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="PlayAgain"
        android:textColor="#F0F0F0F0"
        android:padding="10dp"
        android:textSize="20dp"
        android:background="#ff00aa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>